<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ReserveActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/booked2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="จองคิว"
        android:textSize="25sp"
        android:layout_marginTop="480dp"
        android:textColor="@color/white"
        android:fontFamily="@font/sarabun_light"
        android:textStyle="bold"
        android:onClick="btn_reserve"
        android:background="@drawable/edittext_border" />


    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_border2">
        <TextView
            android:id="@+id/res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="น้องโต๊ะหมูกระทะ"
            android:textSize="20dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:fontFamily="@font/sarabun_light"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="โนนม่วง"
            android:textSize="20dp"
            android:layout_below="@id/res"
            android:layout_marginLeft="165dp"
            android:fontFamily="@font/sarabun_light" />

    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/harutoimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/haruto"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/locationimg"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/location" />


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_below="@id/layout2"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_border2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="วันที่ :"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:fontFamily="@font/sarabun_light"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เวลา :"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:fontFamily="@font/sarabun_light"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="จำนวน :"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:fontFamily="@font/sarabun_light"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="115dp"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/date"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_below="@id/layout2"
        android:layout_marginTop="35dp"
        android:hint="DD/MM/YY"
        android:layout_marginLeft="130dp"
        android:inputType="text"
        android:background="@drawable/edittext_border3"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/minute"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:hint="Time"
        android:layout_below="@id/date"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="130dp"
        android:inputType="text"
        android:background="@drawable/edittext_border3"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/num"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:hint=""
        android:textAlignment="center"
        android:layout_below="@id/minute"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:inputType="number"
        android:background="@drawable/edittext_border3"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/calendarimg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/calendar"
        android:layout_below="@id/layout2"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="320dp"
        android:onClick="btn_date"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/clock"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/clock"
        android:layout_below="@id/calendarimg"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="320dp"
        android:onClick="btn_clock"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="คน"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_below="@id/minute"
        android:fontFamily="@font/sarabun_light"
        android:textStyle="bold"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="15dp"/>

</RelativeLayout>