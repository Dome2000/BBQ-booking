<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomePageActivity">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_cus"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/img">
    </androidx.appcompat.widget.AppCompatImageView>
    <TextView
        android:id="@+id/texthome"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="น้องโตะหมูกระทะ"
        android:textStyle="bold"
        android:fontFamily="@font/sarabun_light"
        android:textColor="#edb083"
        android:textSize="20dp"
        android:layout_below="@+id/background"
        android:layout_marginTop="5dp"/>
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/texthome"
        android:background="@drawable/edittext_border3">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/locationimghome"
            android:layout_width="25dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/location" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 กิโลเมตร"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sarabun_light"
            android:textColor="#A5A5A5"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/timehome"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/clock"
            android:layout_below="@+id/locationimghome"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/locationimghome"
            android:layout_height="wrap_content"
            android:text="จำกัดเวลา 2 ชั่วโมง"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sarabun_light"
            android:textColor="#A5A5A5"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/telhome"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/phone"
            android:layout_below="@+id/timehome"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/timehome"
            android:layout_height="wrap_content"
            android:text="094 036 8263"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#A5A5A5"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sarabun_light"/>
        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เปิด 15:00-23:00 น."
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sarabun_light"
            android:textColor="#A5A5A5"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ราคา 149 บาท/คน"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/sarabun_light"
            android:textColor="#A5A5A5"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/notice"
        android:layout_width="360dp"
        android:layout_height="135dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/texthome"
        android:layout_marginTop="110dp"
        android:background="@drawable/edittext_border2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="น้องโตะหมูกระทะ 149 บาท ถ้าเนื้อคู่ยังไม่ว่างเนื้อย่างก่อนได้ป่าว!!!"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sarabun_light"
            android:textColor="#070707"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เปิดให้บริการทุกวัน 15:00-23:00 น."
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/sarabun_light"
            android:textColor="#070707"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#เข้าร่วมเราชนะ"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/sarabun_light"
            android:textColor="#070707"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#เข้าร่วมม.33"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="85dp"
            android:fontFamily="@font/sarabun_light"
            android:textColor="#070707"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#เข้าร่วมคนละครึ่ง"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/sarabun_light"
            android:textColor="#070707"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/booked"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/notice"
        android:layout_centerHorizontal="true"
        android:text="จองคิว"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:fontFamily="@font/sarabun_light"
        android:textStyle="bold"
        android:background="@drawable/edittext_border" />
</RelativeLayout>